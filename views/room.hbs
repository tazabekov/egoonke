    body {background-color: black;}
    #video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, 300px);
      grid-auto-rows: 300px;
    }
    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border: 2px solid white;
      box-shadow: 0px 1px 5px;
      border-radius: 50%;
    }
  </style>
